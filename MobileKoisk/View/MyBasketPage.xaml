<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKoisk.View.MyBasketPage"
             xmlns:vm="clr-namespace:MobileKoisk.ViewModel"
             xmlns:model="clr-namespace:MobileKoisk.Models"
             Shell.NavBarHasShadow="False"
             NavigationPage.HasNavigationBar="False"
             >
    
    <Grid BackgroundColor="#F1F1F1" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
           
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Header Title-->

        <StackLayout  Grid.Row="0" 
                      Grid.ColumnSpan="2"
           >
            <Frame BackgroundColor="{StaticResource yellow}"
                HasShadow="True"
                HeightRequest="70"
                BorderColor="{StaticResource yellow}"
                CornerRadius="0"
            >
              
                    <HorizontalStackLayout   HeightRequest="40"
                                         
                                            VerticalOptions="Center"
                                         HorizontalOptions="Center"
                                         
                                             >
                        <Label Text="My Basket"
                           Style="{StaticResource largeText}"
                           TextColor="{StaticResource White}"
                     />
                       
                  
                    </HorizontalStackLayout>
                    
                
            </Frame>
        </StackLayout>
        <!--The body-->
        

        <!-- CollectionView for Items in Basket -->
        <CollectionView x:Name="BasketCollectionView" 
                        x:DataType="vm:BasketPageViewModel"
                        ItemsSource="{Binding BasketItems}" 
                        VerticalOptions="Start"
                        Grid.Row="1">

            <CollectionView.EmptyView>
                
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

                        <Image  Source="emptybasket.png"
                           HeightRequest="100"
                           WidthRequest="100"/>
                        <Label Text="Your monkey is empty"
                               Style="{StaticResource mediumText}"
                               TextColor="{StaticResource PrimaryDarkText}"/>
                </VerticalStackLayout>
                
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:BasketItem">
                    <!-- Item Container Frame -->
                    <Frame CornerRadius="10"  
                           Padding="10"
                           Margin="20,10,20,0"
                           HasShadow="True"
                           BorderColor="Transparent">
                        <Frame.Shadow>
                            <Shadow Brush="Gray"
                                    Offset="20,20"
                                    Radius="50"
                                    Opacity="0.1"/>
                        </Frame.Shadow>
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">
                            <!-- Product Image -->
                            <Image Source="{Binding ImageSource}"
                              WidthRequest="90"
                              HeightRequest="90"
                              Aspect="AspectFill"
                              VerticalOptions="Center"
                              Margin="0,0,10,0"/>

                            <!-- Product Name and Quantity -->
                            <VerticalStackLayout Grid.Column="1">
                                <Label Text="{Binding ProductName}" 
                                  FontSize="18" 
                                  Padding="0,5,0,0"
                                  FontAttributes="Bold" 
                                  TextColor="Black" />
                                <Label Text="{Binding ProductSize}" 
                                  FontSize="14" 
                                  Padding="0,5,0,0"
                                  TextColor="Gray" />
                                <Label Text="{Binding Price, StringFormat='R {0}'}" 
                                       FontSize="16" 
                                       TextColor="Green"
                                       FontAttributes="Bold"   
                                      />
                            </VerticalStackLayout>


                            <!-- Quantity Controls -->
                                <HorizontalStackLayout Grid.Column="3"
                                                      
                                                       Margin="0,35,0,0">
                                <Border Stroke="{StaticResource PrimaryDarkText}"
                                        WidthRequest="103"
                                      
                                        HeightRequest="40"
                                        Background="#ccc"
                                        StrokeShape="RoundRectangle 10">
                                    <HorizontalStackLayout>
                                        

                                    
                                    <Button Text="-" 
                                            VerticalOptions="Center"
                                            WidthRequest="35"
                                            HeightRequest="35"
                                            TextColor="{StaticResource PrimaryDarkText}"
                                            Padding="0,-3,0,5"
                                            FontSize="28"
                                            BackgroundColor="{StaticResource Primary}"
                                            Command="{Binding DecreaseQuantityCommand}"
                                    />
                                    <Label Text="{Binding Quantity}" 
                                           FontSize="18"
                                           VerticalOptions="Center"
                                           TextColor="{StaticResource PrimaryDarkText}"
                                           HorizontalTextAlignment="Center"
                                           WidthRequest="30"
                                           
                                          />
                                           
                                    <Button Text="+" 
                                            FontSize="28"
                                            WidthRequest="35"
                                            HeightRequest="35"
                                            VerticalOptions="Center"
                                            TextColor="{StaticResource PrimaryDarkText}"
                                            Padding="0,-3,0,5"
                                            BackgroundColor="{StaticResource Primary}"
                                            Command="{Binding IncreaseQuantityCommand}"
                                             />

                                    </HorizontalStackLayout>
                                    
                                </Border>
                                    
                                </HorizontalStackLayout>
                            <Button Grid.Column="3" 
 Grid.Row="0"
 Text="Ã—"
 FontSize="20"
 TextColor="Red"
 BackgroundColor="Transparent"
 Command="{Binding RemoveFromBasketCommand}"
 HorizontalOptions="End"
 VerticalOptions="Start"
 Margin="0,-5,0,0"
 Padding="5"
 BorderWidth="0"/>
                            

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <VerticalStackLayout Grid.Row="2" Padding="10" Margin="0,10,0,0" BackgroundColor="White"  >
            <Grid ColumnDefinitions="*,Auto" Margin="0,20,0,10" >
                <VerticalStackLayout>
                    <Label Text="Basket Total" 
                  FontSize="18" 
                  FontAttributes="Bold" 
                  VerticalOptions="Center"
                  />
                <Label Text="{Binding TotalPrice, StringFormat='R{0:F2}'}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="Green" 
                   VerticalOptions="Center" 
                   
                   />
                </VerticalStackLayout>

                <!-- Confirm Button -->
            <Button Text="Go to Payment" 
                    x:DataType="vm:BasketPageViewModel"
                    WidthRequest="180"
                    Clicked="GoToPayment"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="White" 
                    BackgroundColor="green" 
                     
                    Padding="10"
                    Margin="0,0,0,0"
                    HorizontalOptions="Center"
                    Grid.Column="1"/>
            </Grid>
        </VerticalStackLayout>


    </Grid>
</ContentPage>