<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileKoisk.View.MainPage"
             >
    
    <!-- The Overroll layout -->

    <Grid RowDefinitions="*, *"  ColumnDefinitions="*,*" >

        <StackLayout  Grid.Row="0" 
                      Grid.ColumnSpan="2"
                      >
            
        <Frame BackgroundColor="{StaticResource yellow}"
               HasShadow="True"
               HeightRequest="70"
               BorderColor="{StaticResource yellow}"
               CornerRadius="0"
        >
                <!-- The Shadow-->
          

            <HorizontalStackLayout  Margin="-20" Padding="4" HeightRequest="40" Spacing="76" VerticalOptions="Center"  >
                <Label Text="Where in the world?"
                       />
                <HorizontalStackLayout Spacing="10" HeightRequest="20" VerticalOptions="Center">
                    <ImageButton  WidthRequest="20" HeightRequest="20" Aspect="AspectFill" Margin="0"/>
                    <Label Text="Dark Mode"  />
                </HorizontalStackLayout>



            </HorizontalStackLayout>



        </Frame>
        </StackLayout>
        <Grid Grid.Row="1" >
            <Label Text="Hello" />
        </Grid>
        
    </Grid>
</ContentPage>