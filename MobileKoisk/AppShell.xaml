<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileKoisk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileKoisk"
    xmlns:view="clr-namespace:MobileKoisk.View"
    Shell.FlyoutBehavior="Disabled"
    Title="MobileKoisk">


    <ShellContent ContentTemplate="{DataTemplate view:IntroScreenPage}" />

    <TabBar>
        <!--Home Tab-->
        <Tab Title="Home"
             Icon="home.png">
            
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}"
                          Route="MainPage"/>
        </Tab>  
        
        <!--Sale Tab-->
        <Tab Title="Receipt"
             Icon="sale.png">
            <ShellContent ContentTemplate="{DataTemplate view:ReceiptPage}" />
        </Tab>  
        
        <!-- Tab-->
        <Tab Title="Scan"
             Icon="scan.png">
            <ShellContent ContentTemplate="{DataTemplate view:ScanningPage}" />
        </Tab> 
        
        <!--Scanning Tab-->
        <Tab Title="Payment"
             Icon="basketblack.png">
            <ShellContent ContentTemplate="{DataTemplate view:PaymentPage }" />
        </Tab>
        
        <!--More Tab-->
        <Tab Title="More"
             Icon="menu.png">
            
            <ShellContent ContentTemplate="{DataTemplate view:MorePage}" />
        </Tab>
    </TabBar>

</Shell>
