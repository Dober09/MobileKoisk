<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileKoisk.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileKoisk"
    xmlns:view="clr-namespace:MobileKoisk.View"
    Shell.FlyoutBehavior="Disabled"
    Title="MobileKoisk">
    
  

    <TabBar>
        <!--Home Tab-->
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate view:MainPage}" />
        </Tab>  
        
        <!--Sale Tab-->
        <Tab Title="Sale"
             Icon="sale.png">
            <ShellContent ContentTemplate="{DataTemplate view:SalePage}" />
        </Tab>  
        
        <!-- Tab-->
        <Tab Title="Scan"
             Icon="scan.png">
            <ShellContent ContentTemplate="{DataTemplate view:ScanningPage}" />
        </Tab> 
        
        <!--Scanning Tab-->
        <Tab Title="ShopList"
             Icon="clipboard.png">
            <ShellContent ContentTemplate="{DataTemplate view:ShoppingListPage}" />
        </Tab>
        
        <!--More Tab-->
        <Tab Title="More"
             Icon="menu.png">
            
            <ShellContent ContentTemplate="{DataTemplate view:MorePage}" />
        </Tab>
    </TabBar>

</Shell>
